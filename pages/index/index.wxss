/* 首页样式优化 */
.index-container {
  height: 100vh;
}

.module-swiper {
  height: 100%;
}

/* 项目模块 */
.project-module {
  height: 100%;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.add-project-btn {
  margin: 0 0 30rpx 0;
  width: 100%;
}

/* 项目卡片容器 */
.project-scroll {
  flex: 1;
  overflow-y: auto;
  min-height: 0;
  padding-right: 10rpx; /* 避免滚动条遮挡内容 */
}

.project-scroll::-webkit-scrollbar {
  width: 6rpx;
}

.project-scroll::-webkit-scrollbar-thumb {
  background-color: rgba(46, 125, 255, 0.3);
  border-radius: 3rpx;
}

/* 时间模块 */
.time-module {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #f5f7fa 0%, #e4eaf1 100%);
}

.current-time {
  font-size: 90rpx;
  font-weight: 600;
  color: #2E7DFF;
  text-shadow: 0 4rpx 8rpx rgba(46, 125, 255, 0.15);
  margin-bottom: 20rpx;
  letter-spacing: 2rpx;
}

.time-tip {
  font-size: 34rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.tracking-project {
  font-size: 36rpx;
  color: #333;
  background: white;
  padding: 25rpx 50rpx;
  border-radius: 50rpx;
  box-shadow: 0 6rpx 16rpx rgba(46, 125, 255, 0.15);
  margin-top: 20rpx;
}

/* 收入模块 */
.income-module {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #f6fbf5 0%, #eaf5ea 100%);
}

.total-income {
  font-size: 70rpx;
  font-weight: 600;
  color: #4CAF50;
  text-shadow: 0 4rpx 8rpx rgba(76, 175, 80, 0.15);
  margin-bottom: 50rpx;
  letter-spacing: 2rpx;
}

/* 底部快速记录按钮优化 */
.record-trigger {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  background: #2E7DFF;
  color: white;
  padding: 25rpx 50rpx;
  border-radius: 50rpx;
  box-shadow: 0 8rpx 20rpx rgba(46, 125, 255, 0.3);
  z-index: 998;
  display: flex;
  align-items: center;
  gap: 15rpx;
  transition: all 0.3s ease;
}

.record-trigger:hover {
  transform: translateX(-50%) scale(1.05);
  box-shadow: 0 10rpx 25rpx rgba(46, 125, 255, 0.4);
}

.trigger-text {
  font-size: 34rpx;
  font-weight: 500;
}

/* 空状态优化 */
.empty-tip {
  text-align: center;
  font-size: 34rpx;
  color: #999;
  margin-top: 150rpx;
  padding: 0 30rpx;
  line-height: 1.6;
}