/* 首页样式 - HCI：适配滑动、大字体 */
.index-container {
  height: 100vh;
}

.module-swiper {
  height: 100%;
}

/* 项目模块 */
.project-module {
  height: 100%;
  padding-bottom: 30rpx;
  display: flex;
  flex-direction: column;
}

.add-project-btn {
  margin: 30rpx;
}

.empty-tip {
  text-align: center;
  font-size: 32rpx;
  color: #999;
  margin-top: 100rpx;
}

/* 时间模块 */
.time-module {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.current-time {
  font-size: 80rpx;
  font-weight: 500;
  color: #2E7DFF;
  margin-bottom: 20rpx;
}

.time-tip {
  font-size: 32rpx;
  color: #666;
}

.tracking-project {
  font-size: 36rpx;
  color: #333;
  background: #e3f2fd;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
}

/* 收入模块 */
.income-module {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.total-income {
  font-size: 60rpx;
  font-weight: 500;
  color: #4CAF50;
  margin-bottom: 40rpx;
}

.go-statistics {
  width: 100%;
}

/* 项目滚动容器 */
.project-scroll {
  flex: 1;
  overflow-y: auto;
  min-height: 0; /* 确保flex容器可以收缩 */
  margin-bottom: 100rpx; /* 为底部触发按钮留出空间 */
}

/* 底部快速记录触发按钮 */
.record-trigger {
  position: fixed;
  bottom: 30rpx;
  left: 50%;
  transform: translateX(-50%);
  background: #2E7DFF;
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  box-shadow: 0 4rpx 12rpx rgba(46, 125, 255, 0.3);
  z-index: 998;
}

.trigger-text {
  font-size: 32rpx;
  font-weight: 500;
}