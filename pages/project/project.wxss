/* 项目详情页样式 - HCI：信息分层、大按钮 */
.project-detail {
  height: 100vh;
  background: #f5f5f5;
}

/* 项目头部 */
.project-header {
  background: white;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.project-name {
  font-size: 40rpx;
  font-weight: 500;
}

.project-status {
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
}

.project-status.doing {
  background: #e3f2fd;
  color: #2E7DFF;
}

.project-status.finished {
  background: #e8f5e9;
  color: #4CAF50;
}

.project-status.timeout {
  background: #ffebee;
  color: #f44336;
}

/* 项目数据 */
.project-data {
  background: white;
  margin: 20rpx 0;
}

.data-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.data-item:last-child {
  border-bottom: none;
}

.data-label {
  font-size: 32rpx;
  color: #666;
}

.data-value {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

/* 编辑区域 */
.project-edit {
  background: white;
  margin: 20rpx 0;
}

.edit-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.edit-item:last-child {
  border-bottom: none;
}

.edit-label {
  font-size: 32rpx;
  color: #333;
}

.edit-value {
  font-size: 32rpx;
  color: #666;
}

.edit-input {
  font-size: 32rpx;
  width: 200rpx;
  text-align: right;
}

/* 操作按钮 */
.project-actions {
  display: flex;
  gap: 20rpx;
}

.save-btn, .delete-btn {
  flex: 1;
}

/* 空状态 */
.empty-tip {
  text-align: center;
  font-size: 32rpx;
  color: #999;
  margin-top: 100rpx;
}