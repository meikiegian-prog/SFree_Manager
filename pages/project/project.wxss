/* 项目详情页样式优化 */
.project-detail {
  height: 100vh;
  background-color: #f5f5f7;
  padding-bottom: 40rpx;
  box-sizing: border-box;
}

/* 项目头部 */
.project-header {
  background-color: white;
  padding: 35rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius: 0 0 30rpx 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

.project-name {
  font-size: 42rpx;
  font-weight: 600;
  color: #333;
  max-width: 60%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.project-status {
  padding: 12rpx 25rpx;
  border-radius: 25rpx;
  font-size: 28rpx;
  font-weight: 500;
}

/* 数据卡片 */
.project-data, .project-edit {
  background-color: white;
  margin: 30rpx;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(242, 177, 177, 0.05);
  overflow: hidden;
}

.data-item, .edit-item {
  display: flex;
  justify-content: space-between;
  padding: 25rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.data-item:last-child, .edit-item:last-child {
  border-bottom: none;
}

.data-label {
  font-size: 32rpx;
  color: #666;
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.data-value {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  text-align: right;
}

.edit-label {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.edit-value {
  font-size: 32rpx;
  color: #2E7DFF;
  padding: 10rpx 0;
}

.edit-input {
  font-size: 32rpx;
  width: 220rpx;
  text-align: right;
  padding: 10rpx 0;
  color: #333;
}

/* 操作按钮区域 */
.project-actions {
  display: flex;
  gap: 30rpx;
  padding: 30rpx;
}

.save-btn, .delete-btn {
  flex: 1;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 34rpx;
}