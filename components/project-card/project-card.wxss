/* 项目卡片样式 - HCI：圆角、阴影、大按钮 */
.project-card {
  padding: 30rpx;
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.card-title {
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
  color: #333;
}

.card-info {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 30rpx;
}

.card-actions {
  display: flex;
  gap: 20rpx;
  flex-wrap: wrap;
}

.timer-btn, .finish-btn, .detail-btn {
  flex: 1;
  min-width: 200rpx;
}

/* 未设置完整信息的项目样式 - 红色边框和黄色感叹号 */
.incomplete-project {
  border: 4rpx solid #F44336;
  background: linear-gradient(to right, #FFEBEE, white);
  position: relative;
}

/* 黄色三角感叹号 */
.warning-icon {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  background: #FFC107;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-weight: bold;
  font-size: 24rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.2);
}

/* 鼠标悬停提示 */
.warning-tooltip {
  position: absolute;
  top: 50rpx;
  right: 10rpx;
  background: rgba(0, 0, 0, 0.8);
  color: white;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
  white-space: nowrap;
  z-index: 1000;
  opacity: 0;
  transition: opacity 0.3s;
}

.incomplete-project:hover .warning-tooltip {
  opacity: 1;
}

/* 删除按钮样式（红色） */
.btn-danger {
  background: #dc3545;
  color: white;
  border: 1px solid #dc3545;
  font-size: 14px;
  padding: 8px 16px;
  border-radius: 4px;
}

.delete-btn {
  background: #dc3545;
  color: white;
  border: 1px solid #dc3545;
  font-size: 14px;
  padding: 8px 16px;
  border-radius: 4px;
}

/* 已完成项目样式 */
.finished-project {
  border: 2px solid #4CAF50;
  position: relative;
}

/* 已完成标记 */
.finished-badge {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  background: #4CAF50;
  color: white;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: bold;
  z-index: 10;
}

/* 删除按钮（x）样式 - 右上角红色圆形按钮 */
.delete-x-btn {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 50rpx;
  height: 50rpx;
  background: #dc3545;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: bold;
  z-index: 100;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.3);
  cursor: pointer;
  transition: all 0.2s ease;
}

.delete-x-btn:active {
  transform: scale(0.9);
  background: #c82333;
}

/* 已完成项目的按钮样式调整 */
.finished-project .card-actions button {
  opacity: 0.6;
  pointer-events: none;
}

.finished-project .delete-btn {
  opacity: 1;
  pointer-events: auto;
}